{{!-- Try Materialize cards --}}
<div class="row">
  <div class="col s12">
    {{!-- <h2 class="header">Horizontal Card</h2> --}}
    <div class="card horizontal change-save" data-state="unsaved" data-id="{{_id}}">
      <div class="card-image">
        <img src="{{image}}">
      </div>
      <div class="card-stacked center-align">
        <div class="card-content">
          <h5>{{title}}</h5>
          <p>{{summary}}</p>
        </div>
          <div class="card-action">
            <a href="{{link}}" class="left">View Article</a>
            <a class="waves-effect waves-teal btn cyan lighten-1 right save-article modal-trigger" href="#modal-saved" data-target="#modal-saved">
              <i class="material-icons right">bookmark</i>Save Article</a>
          </div> 
      </div>
    </div>
  </div>
